@model SISALMINTWebSystemNet.ViewModel.HomeViewModel.LoginViewModel

@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Added by HTTrack -->
    <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
    <!-- /Added by HTTrack -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <link href="@Url.Content("~/Content/templateLogin/css/icons/icomoon/styles.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/templateLogin/css/bootstrap.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/templateLogin/css/components.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/templateLogin/css/colors.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Content/templateLogin/js/plugins/loaders/pace.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/templateLogin/js/core/libraries/jquery.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/templateLogin/js/core/libraries/bootstrap.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/templateLogin/js/plugins/loaders/blockui.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/templateLogin/js/core/app.js")" type="text/javascript"></script>

    <style>
        #imgLogo {
            width: 100px;
        }

        .pace.pace-active {
            display: none;
        }
    </style>
</head>

<body>

    <!-- Page container -->
    <div class="page-container login-container">

        <!-- Page content -->
        <div class="page-content">

            <!-- Main content -->
            <div class="content-wrapper">

                <div class="panel panel-body login-form">
                    <div class="text-center">
                        <!-- <div class="icon-object border-slate-300 text-slate-300"><img src="Content/images/upc.png" id="imgLogo" /></div> -->
                        <h3 class="content-group">SISALMINT</h3>
                        <h5 class="content-group">Inicio de sesión<small class="display-block">Ingresa tus credenciales</small></h5>
                    </div>

                    <form id="formLogin" name="formLogin" action="@Url.Action("Login", "Home")" method="post" novalidate="novalidate">
                        <div class="form-group has-feedback has-feedback-left">                 
                            @Html.TextBoxFor(x => x.objAdmin.Usuario, new { @type = "text", @name = "user", @placeholder = "Usuario", @class = "form-control", @id = "user" })
                            <div class="form-control-feedback">
                                <i class="icon-user text-muted"></i>
                            </div>
                        </div>

                        <div class="form-group has-feedback has-feedback-left">                         
                            @Html.TextBoxFor(x => x.objAdmin.Passw, new { @type = "password", @name = "password", @placeholder = "Password", @class = "form-control", @id = "password" })
                            <div class="form-control-feedback">
                                <i class="icon-lock2 text-muted"></i>
                            </div>
                        </div>

                        @if (TempData["objMensaje"] != null)
                        {
                            var kvpMensaje = (KeyValuePair<String, String>)TempData["objMensaje"];
                            String Color = String.Empty;
                            String Header = String.Empty;

                            switch (kvpMensaje.Key)
                            {
                                case "ERR":
                                    Header = "<b><i class='fa fa-exclamation-circle'></i> Error!</b>";
                                    Color = "danger";
                                    break;
                                case "SUC":
                                    Header = "<b><i class='fa fa-check'></i> Éxito!</b>";
                                    Color = "success";
                                    break;
                            }

                            <div class="alert alert-@Color alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                @Html.Raw(Header) @kvpMensaje.Value
                            </div>
                        }

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Ingresar<i class="icon-circle-right2 position-right"></i></button>
                        </div>
                    </form>
                </div>
                <!-- /simple login form -->

            </div>
            <!-- /main content -->

        </div>
        <!-- /page content -->

    </div>
    <!-- /page container -->

</body>
</html>