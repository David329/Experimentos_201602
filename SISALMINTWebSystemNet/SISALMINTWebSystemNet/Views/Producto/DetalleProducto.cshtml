@model SISALMINTWebSystemNet.ViewModel.ProductoViewModel.DetalleProductoViewModel

@{
    ViewBag.Title = "DetalleProducto";
}

<div id="page-wrapper">
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h3 class="page-header">
                    Detalle del Producto
                </h3>
            </div>
        </div>
        <div class="x_content">
            <form class="form-horizontal form-label-left">
                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="codigo">
                        Código:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@Model.objProducto.Codigo</p>
                    </div>
                </div>

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="nombre">
                        Nombre: 
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@Model.objProducto.Nombre</p>
                    </div>
                </div>

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="marca">
                        Marca:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@Model.objProducto.Marca</p>
                    </div>
                </div>

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="tipo">
                        Tipo:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@Model.objProducto.Tipo.Nombre</p>
                    </div>
                </div>

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="modelo">
                        Modelo:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@Model.objProducto.Modelo</p>
                    </div>
                </div>

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="fechaIngreso">
                        Fecha de Ingreso:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@Model.objProducto.FechaIngreso</p>
                    </div>
                </div>

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="distribuidor">
                        Distribuidor:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@Model.objProducto.Distribuidor</p>
                    </div>
                </div>

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="precio">
                        Precio de Compra:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@Model.objProducto.PrecioCompra</p>
                    </div>
                </div>

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="cantidad">
                        Cantidad:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@Model.objProducto.CantidadIngresada</p>
                    </div>
                </div>

                <div class="item form-group">
                    <label class="control-label col-md-3 col-sm-3 col-xs-12" for="falla">
                        Falla de Fábrica:
                    </label>
                    <div class="col-md-6 col-sm-6 col-xs-12">
                        <p class="form-control">@(Model.objProducto.FallaFabrica == "0" ? "No" : "Sí")</p>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-6 col-md-offset-3">
                        <a class="btn btn-primary" href="@Url.Action("LstProducto", "Producto")"><i class="fa fa-mail-reply"></i> Volver</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <!-- /.container-fluid -->
</div>


