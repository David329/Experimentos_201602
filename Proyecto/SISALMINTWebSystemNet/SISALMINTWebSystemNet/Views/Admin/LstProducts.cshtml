@model SISALMINTWebSystemNet.ViewModel.AdminVM.LstProductsVM
@{
    ViewBag.Title = "LstEnterprises";
    ViewBag.Title = "LstProducts";
    Layout = "~/Views/Layout/_AdminLayout.cshtml";
}


<form role="form" method="post" action="@Url.Action("LstProducts")">
    <div class="x_panel">
        <div class="x_title">
            <div class="title_left">
                <h2>Lista de Lugares</h2>
            </div>
            <div class="title_right">
                <div class="col-md-4 col-sm-4 col-xs-12 form-group pull-right top_search">
                    <div class="input-group">
                        @Html.TextBoxFor(x => x.Filtro, new { @class = "form-control", @type = "text", @placeholder = "Estado(PEN o ACT)" })
                        <span class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th>CategoryID</th>
                        <th>ProductID</th>
                        <th>ProductName</th>
                        <th>RegDate</th>
                        <th>Status</th>
                        <th>UnitPrice</th>
                        <th>UnitsInStock</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.lstProducts)
                    {
                        <tr>
                            <td>@item.CategoryID</td>
                            <td>@item.ProductID</td>
                            <td>@item.ProductName</td>
                            <td>@item.RegDate</td>
                            <td>@item.Status</td>
                            <td>@item.UnitPrice</td>
                            <td>@item.UnitsInStock</td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("AddEditProduct",new{ ProductID = item.ProductID })">
                                    <i class="fa fa-edit"></i> Editar
                                </a>
                            </td>
                            <td>
                                <a class="btn btn-default" href="@Url.Action("DeleteProduct",new{ ProductID = item.ProductID })">
                                    <i class="fa fa-remove"></i> Eliminar
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</form>

